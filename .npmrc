electron_mirror=https://npmmirror.com/mirrors/electron/

# Prefer pre-built binaries over building from source
npm_config_build_from_source=false
npm_config_binary_opts_tag=true

# Skip optional dependencies to avoid compilation errors
npm_config_optional=false

# Increase build timeout for native modules
npm_config_build_timeout=120000

# For Windows specifically
msvs_version=2019